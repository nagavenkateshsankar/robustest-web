package layouts

import (
	"strconv"
	"time"
)

templ Base(title string, currentPath string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title } - RobusTest | Enterprise Mobile Device Lab</title>
			<meta name="description" content="Enterprise mobile device lab management. Your devices, your data, your control."/>
			<link rel="icon" type="image/png" href="/assets/images/favicon.png"/>
			<script src="https://cdn.tailwindcss.com"></script>
			<link rel="stylesheet" href="/assets/css/app.css"/>
			<script src="/assets/js/htmx.min.js"></script>
		</head>
		<body class="bg-white text-gray-900">
			@Header(currentPath)
			<main>
				{ children... }
			</main>
			@Footer()
			<script src="/assets/js/app.js"></script>
		</body>
	</html>
}

templ Header(currentPath string) {
	<header class="fixed top-0 left-0 right-0 z-50 bg-white/95 backdrop-blur-sm border-b border-gray-100">
		<nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="flex items-center justify-between h-16">
				<!-- Logo -->
				<a href="/" class="flex items-center">
					<img src="/assets/images/logo-full.avif" alt="RobusTest" class="h-10 w-auto"/>
				</a>
				<!-- Desktop Navigation -->
				<div class="hidden md:flex items-center space-x-8">
					<a href="/" class={ "font-medium transition-colors", templ.KV("text-blue-600", currentPath == "/"), templ.KV("text-gray-600 hover:text-blue-600", currentPath != "/") }>Home</a>
					<a href="/features" class={ "font-medium transition-colors", templ.KV("text-blue-600", currentPath == "/features"), templ.KV("text-gray-600 hover:text-blue-600", currentPath != "/features") }>Features</a>
					<a href="/pricing" class={ "font-medium transition-colors", templ.KV("text-blue-600", currentPath == "/pricing"), templ.KV("text-gray-600 hover:text-blue-600", currentPath != "/pricing") }>Pricing</a>
					<a href="/security" class={ "font-medium transition-colors", templ.KV("text-blue-600", currentPath == "/security"), templ.KV("text-gray-600 hover:text-blue-600", currentPath != "/security") }>Security</a>
					<a href="/about" class={ "font-medium transition-colors", templ.KV("text-blue-600", currentPath == "/about"), templ.KV("text-gray-600 hover:text-blue-600", currentPath != "/about") }>About</a>
					<a href="/contact" class={ "font-medium transition-colors", templ.KV("text-blue-600", currentPath == "/contact"), templ.KV("text-gray-600 hover:text-blue-600", currentPath != "/contact") }>Contact</a>
				</div>
				<!-- CTA Button -->
				<div class="hidden md:flex items-center">
					<a href="/contact" class="bg-blue-600 text-white px-5 py-2 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
						Request Demo
					</a>
				</div>
				<!-- Mobile menu button -->
				<button type="button" class="md:hidden p-2 text-gray-600" id="mobile-menu-btn">
					<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
					</svg>
				</button>
			</div>
			<!-- Mobile Navigation -->
			<div class="md:hidden hidden py-4 border-t border-gray-100" id="mobile-menu">
				<div class="flex flex-col space-y-4">
					<a href="/" class="text-gray-600 hover:text-blue-600 font-medium">Home</a>
					<a href="/features" class="text-gray-600 hover:text-blue-600 font-medium">Features</a>
					<a href="/pricing" class="text-gray-600 hover:text-blue-600 font-medium">Pricing</a>
					<a href="/security" class="text-gray-600 hover:text-blue-600 font-medium">Security</a>
					<a href="/about" class="text-gray-600 hover:text-blue-600 font-medium">About</a>
					<a href="/contact" class="text-gray-600 hover:text-blue-600 font-medium">Contact</a>
					<a href="/contact" class="bg-blue-600 text-white px-5 py-2 rounded-lg font-semibold hover:bg-blue-700 transition-colors text-center">
						Request Demo
					</a>
				</div>
			</div>
		</nav>
	</header>
}

func currentYear() string {
	return strconv.Itoa(time.Now().Year())
}

